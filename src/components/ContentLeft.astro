---
import LogoGraphic from "@images/logo.svg";
import Buttons from "@components/Buttons.astro";
import Stat from "@components/Stat.astro";
import { calculateTripStats } from "@data/trips";

const stats = calculateTripStats();
---

<section
  class="order-2 border-yellow max-md:border-t md:self-auto md:order-1 md:border-r"
>
  <div
    class="relative text-center flex flex-col justify-center gap-5 px-5 max-md:p-5 max-md:h-full md:w-full md:h-screen"
  >
    <a
      class="block text-yellow mx-auto w-20 h-20 rounded-full hover:text-gray focus:outline-dashed focus:outline-offset-2 focus:outline-2 focus:outline-yellow transition-colors"
      href="/"
      aria-label="Go to home page"
    >
      <LogoGraphic class="w-full h-full" />
    </a>
    <h1 class="text-white text-4xl uppercase">Airports I've Been To</h1>

    <div class="flex flex-col gap-4 text-yellow">
      <ul class="flex justify-center gap-8 text-sm md:text-base">
        <li>
          <Stat value={stats.totalAirports} label="Airports" />
        </li>
        <li>
          <Stat value={stats.totalTrips} label="Trips" />
        </li>
        <li>
          <Stat value={stats.totalFlights} label="Flights" />
        </li>
      </ul>
      <div class="text-sm text-gray-400">
        <span class="text-yellow font-semibold">{stats.mostVisitedAirport}</span
        > most visited ({stats.yearSpan})
      </div>
    </div>

    <Buttons />
  </div>
</section>
