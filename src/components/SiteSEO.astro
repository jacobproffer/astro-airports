---
import { SEO, type Props as SEOProps } from "astro-seo";
const defaultImageFile = new URL("/images/airports-social.jpg", Astro.url);

interface Props {
  seo?: SEOProps;
}

const { seo } = Astro.props;

const siteName = "Airports I've Been To";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<SEO
  title={seo?.title}
  description={seo?.description ??
    "Find out what airports Jacob Proffer has been to."}
  canonical={canonicalURL}
  openGraph={{
    basic: {
      url: canonicalURL,
      title: seo?.title ?? "Airports I've Been To",
      type: "website",
      image: defaultImageFile.toString(),
    },
    image: {
      url: defaultImageFile.toString(),
      secureUrl: defaultImageFile.toString(),
      alt: "",
      height: 1200,
      width: 800,
    },
  }}
  extend={{
    meta: [
      {
        name: "og:locale",
        content: "en_US",
      },
      {
        name: "og:description",
        content:
          seo?.description ??
          "Find out what airports Jacob Proffer has been to.",
      },
      {
        name: "og:site_name",
        content: siteName,
      },
    ],
  }}
/>
